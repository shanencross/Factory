@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<h2>Edit Engineer</h2>

<h4>Edit @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)
  @Html.LabelFor(model => model.Name);
  @Html.EditorFor(model => model.Name);
  <br>
  @Html.LabelFor(model => model.EmploymentDate);
  @Html.EditorFor(model => model.EmploymentDate, new { htmlAttributes = new { type="date" }});
  <br>
  <input type="submit" value="Save" class="btn btn-primary"/>
}
<p>@Html.ActionLink("Back to engineer", "Details", new { id = @Model.EngineerId })<br>
@Html.ActionLink("Back to engineers", "Index")<br>
@Html.ActionLink("Back to engineers", "Index", "Home")</p>